}

@model CalculatorModel
<form asp-controller="CommonCalculator" asp-action="ClearExpression" method="get">
    <body>
        <h1 class='text-center text-primary'>Calculate!</h1>
        <div class='container'>
            <div class='row'>
                <form class='form-group-lg form-inline' onsubmit='return false'>
                    <input asp-for=Expression type='text' id='calcinput' class='focusedInput form-control'>
                    <button type='submit' class='btn btn-warning btn-lg' style="margin-top: 10px">Clear</button>
                </form>
            </div>
        </div>
        <div class='container-fluid' style="margin-top: 10px">
            <div class='row'>
                <div class='col-xs-1 col-1 offset-4'>
                    <button onclick="location.href='@Url.Action("AssignExpression", "CommonCalculator", new { value = "7" })'"
                        class='btn btn-lg btn-primary btn-input' type='button'>7</button>
                </div>
                <div class='col-xs-1 col-1'>
                    <button onclick="location.href='@Url.Action("AssignExpression", "CommonCalculator", new {  value = "8" })'"
                        class='btn btn-lg btn-primary btn-input' type='button'>8</button>
                </div>
                <div class='col-xs-1 col-1'>
                    <button onclick="location.href='@Url.Action("AssignExpression", "CommonCalculator", new {  value = "9" })'"
                        class='btn btn-lg btn-primary btn-input' type='button'>9</button>
                </div>
                <div class='col-xs-1 col-1'>
                    <button onclick="location.href='@Url.Action("AssignExpression", "CommonCalculator", new {  value = "+" })'"
                        class='btn btn-lg btn-primary btn-input' type='button'>+</button>
                </div>
            </div> <!--row-->
            <div class='row'>
                <div class='col-xs-1 col-1 offset-4'>
                    <button onclick="location.href='@Url.Action("AssignExpression", "CommonCalculator", new {  value = "4" })'"
                        class='btn btn-lg btn-primary btn-input' type='button'>4</button>
                </div>
                <div class='col-xs-1 col-1'>
                    <button onclick="location.href='@Url.Action("AssignExpression", "CommonCalculator", new {  value = "5" })'"
                        class='btn btn-lg btn-primary btn-input' type='button'>5</button>
                </div>
                <div class='col-xs-1 col-1'>
                    <button onclick="location.href='@Url.Action("AssignExpression", "CommonCalculator", new {  value = "6" })'"
                        class='btn btn-lg btn-primary btn-input' type='button'>6</button>
                </div>
                <div class='col-xs-1 col-1'>
                    <button onclick="location.href='@Url.Action("AssignExpression", "CommonCalculator", new {  value = "-" })'"
                        class='btn btn-lg btn-primary btn-input' type='button' id='small'>-</button>
                </div>
            </div> <!--row-->
            <div class='row'>
                <div class='col-xs-1 col-1 offset-4'>
                    <button onclick="location.href='@Url.Action("AssignExpression", "CommonCalculator", new {  value = "1" })'"
                        class='btn btn-lg btn-primary btn-input' type='button'>1</button>
                </div>
                <div class='col-xs-1 col-1'>
                    <button onclick="location.href='@Url.Action("AssignExpression", "CommonCalculator", new {  value = "2" })'"
                        class='btn btn-lg btn-primary btn-input' type='button'>2</button>
                </div>
                <div class='col-xs-1 col-1'>
                    <button onclick="location.href='@Url.Action("AssignExpression", "CommonCalculator", new {  value = "3" })'"
                        class='btn btn-lg btn-primary btn-input' type='button'>3</button>
                </div>
                <div class='col-xs-1 col-1'>
                    <button onclick="location.href='@Url.Action("AssignExpression", "CommonCalculator", new {  value = "*" })'"
                        class='btn btn-lg btn-primary btn-input' type='button' id='small'>*</button>
                </div>
            </div> <!--row-->
            <div class='row'>
                <!--row-->
                <div class='col-xs-1 col-1 offset-4'>
                    <button onclick="location.href='@Url.Action("AssignExpression", "CommonCalculator", new {  value = "0" })'"
                        class='btn btn-lg btn-primary btn-input' type='button'>0</button>
                </div>
                <div class='col-xs-1 col-1'>
                    <button onclick="location.href='@Url.Action("AssignExpression", "CommonCalculator", new {  value = "." })'"
                        class='btn btn-lg btn-primary btn-input' type='button' id='small'>.</button>
                </div>
                <div class='col-xs-1 col-1'>
                    <button onclick="location.href='@Url.Action("DoCalculation", "CommonCalculator")'"
                        class='btn btn-lg btn-primary btn-input' type='submit' id='submit'>=</button>
                </div>
                <div class='col-xs-1 col-1'>
                    <button onclick="location.href='@Url.Action("AssignExpression", "CommonCalculator", new {  value = "/" })'"
                        class='btn btn-lg btn-primary btn-input' type='button' id='small'>/</button>
                </div>
            </div>
        </div>
    </body>
</form>