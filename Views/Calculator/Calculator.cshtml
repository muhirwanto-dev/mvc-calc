<body>
    <h1 class='text-center text-primary'>Calculate!</h1>
    <div class='container'>
        <div class='row'>
            <form class='form-group-lg form-inline' onsubmit='return false'>
                <input type='text' id='calcinput' class='focusedInput form-control'>
                <button type='submit' class='btn btn-warning btn-lg' style="margin-top: 10px">Clear</button>
            </form>
        </div>
    </div>
    <div class='container-fluid' style="margin-top: 10px">
        <div class='row'>
            <div class='col-xs-1 col-1 offset-4'>
                <button class='btn btn-lg btn-primary btn-input' type='button'>7</button>
            </div>
            <div class='col-xs-1 col-1'>
                <button class='btn btn-lg btn-primary btn-input' type='button'>8</button>
            </div>
            <div class='col-xs-1 col-1'>
                <button class='btn btn-lg btn-primary btn-input' type='button'>9</button>
            </div>
            <div class='col-xs-1 col-1'>
                <button class='btn btn-lg btn-primary btn-input' type='button'>+</button>
            </div>
        </div> <!--row-->
        <div class='row'>
            <div class='col-xs-1 col-1 offset-4'>
                <button class='btn btn-lg btn-primary btn-input' type='button'>4</button>
            </div>
            <div class='col-xs-1 col-1'>
                <button class='btn btn-lg btn-primary btn-input' type='button'>5</button>
            </div>
            <div class='col-xs-1 col-1'>
                <button class='btn btn-lg btn-primary btn-input' type='button'>6</button>
            </div>
            <div class='col-xs-1 col-1'>
                <button class='btn btn-lg btn-primary btn-input' type='button' id='small'>-</button>
            </div>
        </div> <!--row-->
        <div class='row'>
            <div class='col-xs-1 col-1 offset-4'>
                <button class='btn btn-lg btn-primary btn-input' type='button'>1</button>
            </div>
            <div class='col-xs-1 col-1'>
                <button class='btn btn-lg btn-primary btn-input' type='button'>2</button>
            </div>
            <div class='col-xs-1 col-1'>
                <button class='btn btn-lg btn-primary btn-input' type='button'>3</button>
            </div>
            <div class='col-xs-1 col-1'>
                <button class='btn btn-lg btn-primary btn-input' type='button' id='small'>*</button>
            </div>
        </div> <!--row-->
        <div class='row'>
            <!--row-->
            <div class='col-xs-1 col-1 offset-4'>
                <button class='btn btn-lg btn-primary btn-input' type='button'>0</button>
            </div>
            <div class='col-xs-1 col-1'>
                <button class='btn btn-lg btn-primary btn-input' type='button' id='small'>.</button>
            </div>
            <div class='col-xs-1 col-1'>
                <button class='btn btn-lg btn-primary btn-input' type='submit' id='submit'>=</button>
            </div>
            <div class='col-xs-1 col-1'>
                <button class='btn btn-lg btn-primary btn-input' type='button' id='small'>/</button>
            </div>
        </div>
    </div>
</body>
